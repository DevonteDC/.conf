#!/bin/bash

UpdatePackageManagers() {
  case `uname` in
    Linux)
      echo "Updating apt packages ..."
      DEBIAN_FRONTEND=noninteractive apt-get -qq update
      return $?
      ;;
    Darwin)
      echo "Updating brew packages ..."
      brew update
      return $?
      ;;
  esac
}

function RequirePackage() {
  hash $1 >/dev/null 2>&1 || {
    case `uname` in
      Linux)
        DEBIAN_FRONTEND=noninteractive apt-get install -y $1
        return $?
        ;;
      Darwin)
        brew install -y $1
        return $?
        ;;
    esac
  }
}

function GetRequirements() {
  RequirePackage "curl" && RequirePackage "git" && RequirePackage "zsh" && {
    git clone https://github.com/keyvanfatehi/.conf
}

cd $HOME
UpdatePackageManagers && GetRequirements && echo '
  Ready! Enter the following to bootstrap this machine:
    .conf/bootstrap'
